generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum NewType {
  READING
  THINKING
  DOING
}

enum ProjectType {
  PERSONAL
  ACADEMIC
  WORK
}

model NowUpdate {
  id        Int      @id @default(autoincrement())
  category  NewType
  content   String
  link      String?
  createdAt DateTime    @default(now())
}

model ProjectUpdate {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  link        String?
  type        ProjectType
  createdAt   DateTime    @default(now())
}
